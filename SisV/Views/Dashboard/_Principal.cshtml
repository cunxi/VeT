@{
    SisV.Models.Usuario usuario = Utils.ObtenerUsuarioSesion();

    string Nombre = "";
    string Apellidos = "";
    string Identificador = "";
    string Correo = "";
    string Imagen = "";

    if (usuario == null) { Response.Redirect(Url.Action("Inicio", "Menu")); }
    else
    {
        Nombre = usuario.Nombres;
        Apellidos = usuario.Apellidos;
        Identificador = usuario.Identificador;
        Correo = usuario.Correo;
        Imagen = usuario.Imagen;
    }


}

<header id="header-container" class="fixed fullwidth dashboard">

    <!-- Header -->
    <div id="header" class="not-sticky">
        <div class="container">

            <!-- Left Side Content -->
            <div class="left-side">

                <!-- Logo -->
                <div id="logo">
                    <a href="index.html"><img src="~/Content/images/logo.png" alt=""></a>
                    <a href="index.html" class="dashboard-logo"><img src="~/Content/images/logo2.png" alt=""></a>
                </div>

                <!-- Mobile Navigation -->
                <div class="mmenu-trigger">
                    <button class="hamburger hamburger--collapse" type="button">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>

                <!-- Main Navigation -->
                <nav id="navigation" class="style-1">
                   
                </nav>
                <div class="clearfix"></div>
                <!-- Main Navigation / End -->

            </div>
            <!-- Left Side Content / End -->
            <!-- Right Side Content / End -->
            <div class="right-side">
                <!-- Header Widget -->
                <div class="header-widget">

                    <!-- User Menu -->
                    <div class="user-menu">
                        <div class="user-name"><span><img src="@Imagen" alt=""></span>Hola, @Nombre @Apellidos!</div>
                        <ul>
                            <li><a href="@Url.Action("Index","Dashboard")"><i class="sl sl-icon-settings"></i> Dashboard</a></li>
                            <li><a href="@Url.Action("Perfil","Dashboard")"><i class="sl sl-icon-envelope-open"></i>Mi Perfil</a></li>
                            <li><a href="dashboard-bookings.html"><i class="fa fa-calendar-check-o"></i> Bookings</a></li>
                            <li><a href="@Url.Action("Inicio","Menu")"><i class="sl sl-icon-power"></i> Desconectar</a></li>
                        </ul>
                    </div>
                   
                </div>
                <!-- Header Widget / End -->
            </div>
            <!-- Right Side Content / End -->

        </div>
    </div>
    <!-- Header / End -->
</header>